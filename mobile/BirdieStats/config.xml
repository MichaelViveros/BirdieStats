<?xml version='1.0' encoding='utf-8'?>
<widget id="com.michaelviveros.BirdieStats" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BirdieStats</name>
    <description>
        A mobile app for inserting golf rounds into birdiestats.com.
    </description>
    <author email="michaelviveros@gmail.com" href="http://www.michaelviveros.com/">
        Michael Viveros
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <icon src="www/img/icon.png" />
    <engine name="android" spec="~5.1.1" />
    <engine name="browser" spec="~4.1.0" />
    <hook type="before_compile" src="www/js/vueify-build.js" />
</widget>
